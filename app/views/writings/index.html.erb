<p id="notice"><%= notice %></p>

<h1>Listing Writings</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Writing type</th>
      <th>Content</th>
      <th>Comments count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @writings.each do |writing| %>
      <tr>
        <td><%= writing.title %></td>
        <td><%= writing.writing_type %></td>
        <td><%= writing.content %></td>
        <td><%= writing.comments_count %></td>
        <td><%= link_to 'Show', writing %></td>
        <td><%= link_to 'Edit', edit_writing_path(writing), 'data-no-turbolink' => true %></td>
        <td><%= link_to 'Destroy', writing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

