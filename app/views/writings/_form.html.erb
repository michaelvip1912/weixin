<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@writing) do |f| %>
      <% if @writing.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@writing.errors.count, "error") %> prohibited this writing from being saved:</h2>

          <ul>
          <% @writing.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title, class: 'form-control'%>
      </div>
      <div class="field">
        <%= f.label :writing_type %><br>
        <%= f.text_field :writing_type, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :content %><br>
        <%= f.kindeditor :content, class: 'form-control' %>
      </div>
      <div class="actions">
        <%= f.submit class: "btn btn-primary"%>
      </div>
    <% end %>
  </div>
</div>
